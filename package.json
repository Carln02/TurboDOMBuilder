{
  "name": "turbodombuilder",
  "version": "0.2.2",
  "description": "A lightweight JavaScript library for quickly creating and appending DOM elements.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-ts && npm run build-webpack && npm run build-min",
    "build-ts": "tsc",
    "build-webpack": "webpack --config webpack.config.js",
    "build-min": "webpack --config webpack.min.config.js",
    "clean": "rm -rf dist && rm -rf build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Carln02/TurboDOMBuilder.git"
  },
  "keywords": [
    "DOM",
    "builder",
    "elements",
    "JavaScript",
    "library"
  ],
  "author": "Carln02",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Carln02/TurboDOMBuilder/issues"
  },
  "homepage": "https://github.com/Carln02/TurboDOMBuilder.git",
  "devDependencies": {
    "ts-loader": "^9.5.1",
    "terser-webpack-plugin": "^5.3.10",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
